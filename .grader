#!/bin/bash

#folder articles contains a lot of markdown files
posts=./posts/*
total=0
completed=0

for post in $posts;
do
    if [ -d "$post" ]; then
        total=$((total + 1))
        gatorgrader CountFileWords --file index.qmd --directory $post --count 250 --description " Check word count of $post/index.qmd" --nowelcome
        if [ $? -eq 0 ]; then
            $completed=$((completed + 1))
        fi
    fi
done

echo "POSTS COMPLETED: $completed/$total"
